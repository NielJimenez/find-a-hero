{
  "name": "react-sandbox-v2",
  "version": "0.0.1",
  "description": "Updated version of the React-Sandbox with updated packages and methods",
  "main": "index.js",
  "repository": "https://github.com/abarcenas29/react-sandbox-v2",
  "license": "MIT",
  "scripts": {
    "git:submodules": "git submodule update --init --recursive",
    "build:prod": "rimraf ./build/* && cross-env NODE_ENV=production webpack --config internals/webpack.config.js --mode production --progress --optimize-minimize",
    "postinstall": "rimraf node_modules/jest-runtime/node_modules/babel-core node_modules/jest-config/node_modules/babel-core && npm run git:submodules",
    "start:dev": "rimraf ./build/* && cross-env NODE_ENV=development webpack-dev-server --config internals/webpack.config.js --mode development --open --hot",
    "deploy": "npm run build:prod && live-server-spa -p 8080 build",
    "test": "cross-env NODE_ENV=test && jest --colors"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "crypto-js": "^4.0.0",
    "final-form": "^4.18.7",
    "graphql": "^14.6.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-final-form": "^6.3.5",
    "react-helmet": "^5.2.1",
    "react-intl": "^3.12.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.1",
    "react-toastify": "^5.5.0",
    "workbox-webpack-plugin": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-flow": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@hot-loader/react-dom": "^16.12.0",
    "autoprefixer": "^9.7.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.1",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "live-server-spa": "^1.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "purgecss-webpack-plugin": "^2.1.0",
    "react-hot-loader": "^4.12.19",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^5.1.2",
    "redux-devtools-extension": "^2.13.8",
    "relay-compiler": "^9.0.0",
    "relay-config": "^9.0.0",
    "relay-hooks": "^3.1.0",
    "relay-runtime": "^9.0.0",
    "rimraf": "^3.0.2",
    "sanitize.css": "^11.0.0",
    "sass": "^1.26.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "styled-components": "^5.0.1",
    "tailwindcss": "^1.2.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "development": {
        "plugins": [
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "plugins": [
      "react"
    ],
    "globals": {
      "workbox": true,
      "self": true
    },
    "rules": {
      "react/prop-types": 0,
      "camelcase": [
        1,
        {
          "ignoreDestructuring": true
        }
      ]
    }
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^Components(.*)$": "<rootDir>/app/components$1",
      "^Containers(.*)$": "<rootDir>/app/containers$1",
      "^Helpers(.*)$": "<rootDir>/app/helpers$1",
      "^Modules(.*)$": "<rootDir>/app/modules$1",
      "^Styles(.*)$": "<rootDir>/app/styles$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "prettier": {
    "semi": false,
    "singleQute": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules"
  ]
}
